<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".module.example.ToastExampleActivityActivity"
    tools:showIn="@layout/activity_toast_example_activity">

    <TextView
        style="@style/ButtonClickStyle"
        android:onClick="showSystemStringTextToast"
        android:text="showSystemStringTextToast" />

    <TextView
        style="@style/ButtonClickStyle"
        android:onClick="showSystemStringResToast"
        android:text="showSystemStringResToast" />


    <TextView
        style="@style/ButtonClickStyle"
        android:onClick="showCustomizeStringTextToast"
        android:text="showCustomizeStringTextToast" />

    <TextView
        style="@style/ButtonClickStyle"
        android:onClick="showCustomizeStringResToast"
        android:text="showCustomizeStringResToast" />
</LinearLayout>